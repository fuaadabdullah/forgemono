# Example LiteLLM secrets for development environment
# To encrypt: sops -e dev/litellm-secrets.yaml.example > dev/litellm-secrets.enc.yaml

apiVersion: v1
kind: Secret
metadata:
  name: litellm-secrets
  namespace: overmind-dev
type: Opaque
stringData:
  # OpenAI API Key (get from https://platform.openai.com/api-keys)
  openai-api-key: "sk-proj-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

  # Google Gemini API Key (get from https://makersuite.google.com/app/apikey)
  gemini-api-key: "AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

  # DeepSeek API Key (get from https://platform.deepseek.com/)
  deepseek-api-key: "sk-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

  # Optional: Database connection string for LiteLLM
  database-url: "postgresql://litellm:password@postgres:5432/litellm"

  # Optional: Master key for LiteLLM API authentication
  master-key: "sk-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
