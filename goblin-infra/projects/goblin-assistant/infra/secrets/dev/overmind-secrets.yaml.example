# Example Overmind secrets for development environment
# To encrypt: sops -e dev/overmind-secrets.yaml.example > dev/overmind-secrets.enc.yaml

apiVersion: v1
kind: Secret
metadata:
  name: overmind-secrets
  namespace: overmind-dev
type: Opaque
stringData:
  # Gemini API Key (direct access, bypassing LiteLLM if needed)
  gemini-api-key: "AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

  # DeepSeek API Key (direct access)
  deepseek-api-key: "sk-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

  # Optional: Database credentials
  postgres-password: "dev_password_change_me"
  redis-password: "dev_password_change_me"

  # Optional: NATS credentials
  nats-user: "overmind"
  nats-password: "dev_password_change_me"

  # Optional: Temporal server connection
  temporal-namespace: "overmind-dev"
  temporal-server: "temporal-frontend.temporal:7233"

  # Optional: OIDC credentials
  oidc-client-id: "overmind-dev"
  oidc-client-secret: "dev_secret_change_me"
  oidc-issuer: "https://auth.example.com"
