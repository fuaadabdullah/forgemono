---
# Example secrets file for LiteLLM
# Copy this to secrets.yaml and fill in your actual API keys
# Then install with: helm install litellm . -f secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: litellm-secrets
  namespace: default
type: Opaque
stringData:
  openai-api-key: "YOUR_OPENAI_API_KEY_HERE"
  gemini-api-key: "YOUR_GEMINI_API_KEY_HERE"
  deepseek-api-key: "YOUR_DEEPSEEK_API_KEY_HERE"

---
# Master key for admin operations
apiVersion: v1
kind: Secret
metadata:
  name: litellm-master-key
  namespace: default
type: Opaque
stringData:
  master-key: "sk-1234567890abcdef"  # Change this to a secure random string
