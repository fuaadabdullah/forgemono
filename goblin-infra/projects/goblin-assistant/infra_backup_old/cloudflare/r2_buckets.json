{
  "buckets": [
    {
      "name": "goblin-audio",
      "binding": "GOBLIN_AUDIO",
      "purpose": "Audio files (TTS output, voice recordings, sound effects)",
      "lifecycle": {
        "expiration_days": 90,
        "transition_to_infrequent_access": 30
      },
      "cors": {
        "allowed_origins": ["https://goblin.fuaad.ai", "https://api.goblin.fuaad.ai"],
        "allowed_methods": ["GET", "PUT", "HEAD"],
        "allowed_headers": ["*"],
        "max_age_seconds": 3600
      },
      "estimated_size": "100GB",
      "access_pattern": "Write once, read occasionally"
    },
    {
      "name": "goblin-logs",
      "binding": "GOBLIN_LOGS",
      "purpose": "Application logs, error traces, audit logs",
      "lifecycle": {
        "expiration_days": 30,
        "compress": true
      },
      "estimated_size": "50GB",
      "access_pattern": "Write frequently, read rarely (debugging only)"
    },
    {
      "name": "goblin-uploads",
      "binding": "GOBLIN_UPLOADS",
      "purpose": "User-uploaded reference files, documents, images",
      "lifecycle": {
        "expiration_days": 365
      },
      "cors": {
        "allowed_origins": ["https://goblin.fuaad.ai"],
        "allowed_methods": ["GET", "PUT", "DELETE"],
        "allowed_headers": ["*"],
        "max_age_seconds": 3600
      },
      "max_file_size": "50MB",
      "estimated_size": "500GB",
      "access_pattern": "User-driven, frequent reads after upload"
    },
    {
      "name": "goblin-training",
      "binding": "GOBLIN_TRAINING",
      "purpose": "Model training artifacts, fine-tuning datasets, embeddings",
      "lifecycle": {
        "expiration_days": 180,
        "transition_to_infrequent_access": 60
      },
      "estimated_size": "2TB",
      "access_pattern": "Batch uploads, infrequent access"
    },
    {
      "name": "goblin-cache",
      "binding": "GOBLIN_CACHE_R2",
      "purpose": "LLM response cache, API response cache (overflow from KV)",
      "lifecycle": {
        "expiration_days": 7
      },
      "estimated_size": "200GB",
      "access_pattern": "High read/write, short TTL"
    }
  ],
  "pricing_comparison": {
    "r2": {
      "storage": "$0.015/GB/month",
      "class_a_operations": "$4.50 per million (writes)",
      "class_b_operations": "$0.36 per million (reads)",
      "egress": "$0.00 (free!)",
      "monthly_estimate_1tb": "$15.00"
    },
    "s3": {
      "storage": "$0.023/GB/month",
      "put_requests": "$5.00 per million",
      "get_requests": "$0.40 per million",
      "egress": "$0.09/GB (first 10TB)",
      "monthly_estimate_1tb": "$23.00 + $90.00 egress = $113.00"
    },
    "savings": {
      "storage_per_tb": "$8.00/month",
      "egress_per_tb": "$90.00/month",
      "total_per_tb": "$98.00/month (86% cheaper!)"
    }
  }
}
