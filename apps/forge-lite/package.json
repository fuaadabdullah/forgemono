{
  "name": "forge-lite",
  "version": "1.0.0",
  "type": "module",
  "main": "expo-router/entry",
  "scripts": {
    "dev": "expo start",
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docs:generate": "node scripts/generate-docs.js",
    "telemetry:check": "node scripts/check-telemetry.js",
    "test": "jest",
    "test:smoke": "jest --testPathPattern=smoke",
    "test:e2e": "jest --testPathPattern=e2e",
    "market-data:fetch": "cd api && python3 services/market_data.py",
    "feedback:export": "cd api && python services/feedback.py",
    "user-data:export": "cd api && python services/export.py",
    "dev:full": "concurrently -k \"cd api && uvicorn main:app --reload\" \"pnpm dev\"",
    "build:dev": "eas build --platform all --profile development",
    "build:production": "eas build --platform all --profile production",
    "submit:ios": "eas submit --platform ios",
    "submit:android": "eas submit --platform android",
    "goblin:dev": "cd ../../GoblinOS && goblin forge-lite-dev",
    "goblin:test": "cd ../../GoblinOS && goblin forge-lite-test",
    "goblin:build": "cd ../../GoblinOS && goblin forge-lite-release-build",
    "goblin:submit": "cd ../../GoblinOS && goblin forge-lite-release-submit"
  },
  "dependencies": {
    "@expo/metro-runtime": "^6.1.2",
    "@expo/vector-icons": "^15.0.3",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/native": "^7.1.8",
    "@sentry/react-native": "^7.2.0",
    "@supabase/supabase-js": "^2.80.0",
    "@tanstack/react-query": "^5.90.7",
    "expo": "54.0.23",
    "expo-blur": "^15.0.7",
    "expo-constants": "^18.0.10",
    "expo-haptics": "^15.0.7",
    "expo-linking": "^8.0.8",
    "expo-router": "^6.0.14",
    "expo-status-bar": "~3.0.8",
    "posthog-react-native": "^4.10.8",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "^2.28.0",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "^4.16.0",
    "react-native-svg": "^15.12.1",
    "react-native-web": "^0.19.13",
    "react-server-dom-webpack": "^19.0.0",
    "victory-native": "^41.20.2",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.0",
    "@types/react": "~19.1.17",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-native": "^4.1.0",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.13",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|ts|tsx)$": "babel-jest",
      "^.+\\.(bmp|gif|jpg|jpeg|mp4|png|psd|svg|webp)$": "<rootDir>/node_modules/react-native/jest/assetFileTransformer.js"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!react-native/)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.cjs"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/.expo/",
      "<rootDir>/node_modules/"
    ],
    "resolver": "<rootDir>/node_modules/react-native/jest/resolver.js",
    "testEnvironment": "<rootDir>/node_modules/react-native/jest/react-native-env.js",
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js,jsx}",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/.expo/**",
      "!**/assets/**"
    ]
  },
  "private": true
}
