{
  "name": "goblin-assistant",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "validate-env": "tsx scripts/validate-env.ts",
    "test": "vitest",
    "security:audit": "npm audit --audit-level moderate || true",
    "security:audit-ci": "audit-ci --config audit-ci.json",
    "security:audit-html": "npm audit --audit-level moderate --json | npm-audit-html --output reports/security-audit.html || true",
    "security:scan": "npm run security:audit && npm run security:audit-html",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.2",
    "@sentry/react": "^10.29.0",
    "@sentry/vite-plugin": "^4.6.1",
    "axios": "^1.7.9",
    "lucide-react": "^0.469.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.10.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "audit-ci": "^7.1.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.18.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-storybook": "^10.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-audit-html": "^1.5.0",
    "postcss": "^8.4.49",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2",
    "vite": "^7.0.0",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "npm run type-check"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
