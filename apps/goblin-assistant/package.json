{
  "name": "goblin-assistant",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "generate-types": "openapi-typescript http://localhost:8001/openapi.json --output src/types/generated.ts",
    "validate-env": "tsx scripts/validate-env.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "security:audit": "npm audit --audit-level moderate || true",
    "security:audit-ci": "audit-ci --config audit-ci.json",
    "security:audit-html": "echo 'HTML audit report disabled - npm-audit-html removed due to vulnerabilities' && npm audit --json > reports/security-audit.json || true",
    "security:scan": "npm run security:audit && npm run security:audit-html",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.2",
    "@sentry/node": "^10.29.0",
    "@sentry/react": "^10.29.0",
    "@sentry/vite-plugin": "^4.6.1",
    "@vercel/analytics": "^1.6.1",
    "axios": "^1.7.9",
    "lucide-react": "^0.469.0",
    "posthog-js": "^1.302.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.10.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@storybook/react": "^10.1.4",
    "@tanstack/react-query": "^5.90.12",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@playwright/test": "^1.40.1",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "audit-ci": "^7.1.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.18.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-storybook": "^10.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "openapi-typescript": "^7.0.0",
    "postcss": "^8.4.49",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2",
    "vite": "^7.2.6",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "npm run type-check"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "marked": "^14.1.0",
    "esbuild": "^0.25.0",
    "got": ">=11.8.5"
  }
}
