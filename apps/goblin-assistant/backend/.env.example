# Example environment variables for local development
# Copy this file to backend/.env and fill in real values. DO NOT commit real secrets.

# ===================
# Core Configuration
# ===================

# Supabase / Postgres
SUPABASE_URL=https://your-supabase-url.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
DATABASE_URL=postgres://user:password@localhost:5432/forge

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# Encryption Keys
ROUTING_ENCRYPTION_KEY=your-routing-encryption-key-32-chars-min
SETTINGS_ENCRYPTION_KEY=your-settings-encryption-key-32-chars-min

# Frontend URL (for WebAuthn origin validation)
FRONTEND_URL=http://localhost:3000

# App settings
APP_ENV=development
PORT=8000

# ===================
# Logging & Monitoring
# ===================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ===================
# Rate Limiting
# ===================
RATELIMIT_ENABLED=true

# ===================
# AI Provider API Keys
# ===================

# OpenAI
OPENAI_API_KEY=sk-...

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Google AI
GOOGLE_API_KEY=...

# Groq
GROQ_API_KEY=gsk_...

# ===================
# External Services
# ===================

# Telemetry
SENTRY_DSN=
POSTHOG_API_KEY=

# Market data provider (server-side only)
MARKET_DATA_API_KEY=

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# ===================
# Redis Configuration
# ===================
USE_REDIS_CHALLENGES=true  # Set to 'true' to use Redis instead of in-memory storage
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false
# REDIS_URL=redis://localhost:6379/0  # Alternative: full Redis URL

# ===================
# LLM Runtime Configuration (Production)
# ===================

# Kamatera-hosted LLM runtime (RECOMMENDED for production)
# All production LLM traffic should route through Kamatera-managed endpoints
KAMATERA_HOST=your-kamatera-host
KAMATERA_LLM_URL=https://llm.kamatera.example
KAMATERA_LLM_API_KEY=your-kamatera-llm-api-key

# Local LLM runtime (DEPRECATED for production - use only for development)
# Set USE_LOCAL_LLM=true to use these instead of Kamatera
USE_LOCAL_LLM=false
LOCAL_LLM_PROXY_URL=http://localhost:11434
LOCAL_LLM_API_KEY=your-local-llm-api-key

# Notes:
# - Keep secrets out of VCS. Use your vault (GoblinOS secrets) or CI secret store for production.
# - For local development you can put values in backend/.env (gitignored).
# - FRONTEND_URL should match your frontend deployment URL in production
# - Redis is recommended for production challenge storage instead of in-memory dict
# - To explicitly disallow local memory fallback, set ALLOW_MEMORY_FALLBACK=false (recommended in production)
ALLOW_MEMORY_FALLBACK=false
# - Set CORS_ORIGINS to your production domains (comma-separated)
